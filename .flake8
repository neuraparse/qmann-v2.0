[flake8]
max-line-length = 120
extend-ignore = E203, W503, E501, F401
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    .pytest_cache,
    .mypy_cache,
    htmlcov,
    .tox,
    docs,
    migrations
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
    scripts/*:F401

